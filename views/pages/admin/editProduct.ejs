<body>

  <div class="col-12 stretch-card">

    <div class="card">
      <div class="card-body">
        <form class="forms-sample" action="/admin/modifyproduct" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="exampleInputName1">Name</label>
            <input value="<%= data.name %>" name="pname" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail3">Price</label>
            <input value="<%= data.price %>" name="pprice" type="text" class="form-control" id="exampleInputEmail3" placeholder="Price">
          </div>
          <div class="form-group">
            <label>File upload</label>
            <input type="file" name="img" class="file-upload-default">
            <div class="input-group col-xs-12">
              <input type="file" name="image" multiple class="form-control file-upload-info" placeholder="Upload Image">
              <span class="input-group-append">
                <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
              </span>
            </div>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect2">Category</label>
            <select name="pcat" class="form-control" id="exampleFormControlSelect2">
              <% for(let i of category) { %>
                <option value="<%= i.name %>" ><%= i.name %></option>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <label for="exampleInputCity1">stock</label>
            <input value="<%= data.stock %>" type="text" name="pstock" class="form-control" id="exampleInputCity1" placeholder="Stock">
          </div>
          <div class="form-group">
            <label for="exampleTextarea1">Description</label>
            <textarea type="text" name="pdesc" class="form-control" id="exampleTextarea1" rows="3">
                <%= data.description %>
            </textarea>
          </div>
          <input hidden name="id" value="<%= data._id %>" type="text">
          <button class="btn btn-gradient-primary me-2">Submit</button>
          <a href="/admin/products" class="btn btn-light">Cancel</a>
        </form>
      </div>
    </div>
  </div>


  <style>
