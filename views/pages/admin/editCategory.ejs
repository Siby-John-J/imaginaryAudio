
<div class="modal-body">
  <div class="col-12 stretch-card">
    <div class="card">
      <div class="card-body">
        <form action="/admin/editcat" method="post" class="forms-sample" enctype="multipart/form-data">
          <div class="form-group">
            <!-- <label for="exampleInputName1">Name</label> -->
            <input type="text" value="<%= data._id %>" name="id" hidden>
            <input value="<%= data.name %>" type="text" class="form-control" id="exampleInputName1" name="addcat">
          </div>
          <div class="form-group">
