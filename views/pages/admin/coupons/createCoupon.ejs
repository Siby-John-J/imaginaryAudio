<body>
    <div class="coupon-create-main">
        <form method="post" action="/admin/coupon/create/set" class="card-body">
            <p class="mb-2"><strong>Create coupon</strong></p>
            <div class="form-group mb-3">
                <label for="example-number">Coupon Name</label>
                <input class="form-control" id="example-number" type="text" name="coupon_name">
              </div>
            <div class="form-group mb-3">
              <label for="example-time">Limit</label>
              <input class="form-control timeControl" id="example-time" type="number" name="time_limit"" placeholder="00:00:00">
            </div>
            <div class="form-group mb-3">
              <label for="example-number">Min Purchase</label>
              <input class="form-control" id="example-number" type="number" name="min_purchase">
            </div>
            <div class="form-group mb-3">
                <label for="example-select">type</label>
                <select name="coupon_type" class="form-control" id="example-select" onchange="setType()">
                  <option value="amount">amount</option>
                  <option id="value-per" value="percentage">persentage</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label for="example-number">Amount</label>
                <input class="form-control" id="example-number-input" type="number" name="amount">
            </div>
          <div class="form-group mb-3">
            <label for="multi-select2">Multiple Select</label>
            <select name="items" class="form-control select2-multi" id="multi-select2">
              <% for(let i of products) { %>
                <% let cate = Object.keys(i)[0] %>
                <optgroup label="<%= cate %>">
                  <% for(let j of i[cate]) { %>
                    <option value="<%= j %>"><%= j %></option>
                  <% } %>
                </optgroup>
              <% } %>
            </select>
          </div>
          <div class="form-group mt-3" 
          style="display: flex; justify-content: center; align-items: center; height: 4em; margin-top: 14em;">
            <button class="my-3" style="padding: 1em 3em; background: none; border: 1px solid black;
              border-radius: 5px;">
              Save
            </button>
            <a style="margin-left: 2em; color: black; padding: 1em 3em; border: 1px solid black;" href="">
              Cancel
            </a>
        </div>
      </form>
    </div>
    
