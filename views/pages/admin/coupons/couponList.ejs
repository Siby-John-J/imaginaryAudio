<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin/couponStyle.css">
    <title>Document</title>
</head>
<body>
    <form action="/admin/coupon/set" method="post">
        <div class="coupons-list">
            <% for(let i of data) { %>
                <div class="coupons">
                    <div style="background: <%= i.color %>" class="coupon1 first">
                        <label class="coupon-details" for=""><%= i.name %></label>
                        <% if(type === 'select') { %>
                            <input name="selected" value="<%= i._id %>" type="checkbox">
                        <% } %>
                        <label class="offer coupon-details" for="">
                            <% if(i.type === 'amount') { %>
                                <%= i.Purchase + ' $ OFF' %>
                                <% } else if(i.type === 'percentage') { %>
                                    <%= i.Purchase + ' % OFF' %>
                            <% } %>
                        </label>
                        <% if(i.products[0] === 'all') { %>
                            <label class="type coupon-details" for="">Any Products</label>
                        <% } else { %>
                            <select id="" style="margin-left: 2em; color: white; border: none; background: none; width: 8em;">
                                <% for(let j of i.products) { %>
                                    <option style="color: black; background: none;"><%= j %></option>
                                <% } %>
                            </select>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
        <% if(type === 'select') { %>
            <button class="add-btn">Send</button>
        <% } %>
    </form>
</body>
</html>