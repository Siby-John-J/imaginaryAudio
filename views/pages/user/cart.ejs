<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/home/cartStyle.css">
        <title>Cart</title>
        <script defer src="/js/addressPanel.js"></script>
    </head>
<body>
    <%- include('../../layouts/header.ejs') %>
    <div class="main-cart">
        <div class="cart">
            <div class="cart-title">
                <h1>Shopping Cart</h1>
                <% if(data) { %>
                    <h1><%= data.length + ' items' %></h1>
                <% } else { %>
                    <h1>0 items</h1>
                <% } %>
            </div>
            <hr style="margin-top: 1em; width: 55em; border-color: rgb(0, 0, 0);">
            <div class="cart-list">
                <div class="cart-inner-title">
                    <label style="padding-right: 13em;">PRODUCT DETAILS</label>
                    <label>QUANTITY</label>
                    <label>PRICE</label>
                    <label>TOTAL</label>
                </div>
                <% if(data) { %>
                    <% for(let i = 0; i < data.length; i++) { %>                
                        <div class="cart-inner-content">
                            <div class="prod-details">
                                <div class="prod-pic">
                                    <img src="<%= '/img/' + data[i][0].image[0]%>" alt="" style="width: 100%; height: 100%;">
                                </div>
                                <div class="prod-other">
                                    <label for=""><%= data[i][0].name%></label>
                                    <label style="color: navy;" for=""><%= data[i][0].category%></label>
                                    <a style="color: red;" class="remove-item" href="/<%= user %>/cart/remove?name=<%= data[i][0].name%>">
                                        remove
                                    </a>
                                </div>
                            </div>
                            <div class="prod-pricing">
                                <div class="prod-quantity">
                                    <a href="/<%= user %>/cart/countcart?item=<%= data[i][0]._id %>&num=min">-</a>
                                    <label><%= data[i][1]%></label>
                                    <a href="/<%= user %>/cart/countcart?item=<%= data[i][0]._id %>&num=max">+</a>
                                </div>
                                <label>$<%= data[i][0].price%></label>
                                <label>$<%= data[i][0].price * data[i][1]%></label>
                            </div>
                        </div>
                    <% } %>
                    <% } else { %>
                    <h1 class="no-it">No items</h1>
                    <% } %>
            </div>
        </div>
        <div class="summary">
            <div class="summary-field">
                <div class="summary-title">
                    <h1>Order summary</h1>
                </div>
                <hr style="margin-top: 2.3em; width: 20em; border-color: rgb(0, 0, 0);">
                <div class="total-price">
                    <label>ITEMS 3</label>
                    <label>$4532</label>
                </div>
                <div class="inp-fields">
                    <label for="">SHIPPING</label>
                    <input  class="control" type="text">
                    <label for="">PROMO CODE</label>
                    <input class="control" type="text">
                    <button class="control ap-btn">APPLY</button>
                </div>
                <div class="total-cost">
                    <div class="last-total">
                        <label for="">TOTAL COST</label>
                        <label for="">$5550</label>
                    </div>
                    <button onclick="adding()" class="checkout-btn">CHECKOUT</button>
                    
                    <div style="display: <%= visible %>;" class="add-address-checkout">
                        <button class="close-btn" onclick="closeAdd()">X</button>
                        <a class="ad-add-btn" href="/<%= user%>/address?type=checkout">
                            <% if(address === 'add') { %>
                                <div class="main-checkout-address">
                                    <label for="">Address1</label>
                                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.
                                        Architecto vero fuga possimus? Ipsum sed iste nobis non, 
                                        temporibus atque vitae!
                                    </p>
                                </div>
                                <% } else { %>
                                    click here
                                    <% } %>
                                </a>
                        <button onclick="order()" class="place-order-btn">Place order</button>
                    </div>
                    
                    <div class="place-order-label">
                        <img src="/img/icons/3500833.png" alt="">
                        <h1>Youre Order Placed</h1>
                        <div class="order-control-btns">
                            <a class="show-order" href="">show orders</a>
                            <button class="order-ok" onclick="order('ent')">ok</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>